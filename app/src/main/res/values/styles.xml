<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoActionBar" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ButtonStyle">
        <item name="qb_backgroundColor">@color/button_colour</item>
        <item name="qb_strokeColor">@color/button_stroke_colour</item>
        <item name="qb_radius">100</item>
        <item name="android:textColor">@color/button_text_colour</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="AttributeHeading">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/entryTextView</item>
    </style>

    <style name="AttributeHeadingMap" parent="AttributeHeading">
        <item name="android:textSize">24dp</item>
    </style>

    <style name="AttributeHeadingGraph" parent="AttributeHeading">
        <item name="android:textSize">18dp</item>
    </style>

    <style name="AttributeSubHeadingMap" parent="AttributeHeadingMap">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="AttributeSubHeadingGraph" parent="AttributeHeadingGraph">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">12dp</item>
    </style>

</resources>
